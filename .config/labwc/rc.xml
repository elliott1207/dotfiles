<?xml version="1.0"?>
<labwc_configs>
  <keyboard>
    <keybind key="W-f">
        <action name="Execute" command="thunar"/>
    </keybind>
    <keybind key="A-space">
      <action name="Execute" command="fuzzel"/>
    </keybind>
    <keybind key="W-S-c">
      <action name="Execute" command="/opt/labwc-scripts/color-picker"/>
    </keybind>
    <keybind key="W-o">
      <action name="Execute" command="wlr-randr --output eDP-1 --scale 1.25 --on"/>
    </keybind>
    <keybind key="W-p"><action name="Execute" command="wlr-randr --output eDP-1 --scale 1.25 --off"/>
 a </keybind>
    <keybind key="C-A-delete">
      <action name="Execute" command="wlogout"/>
    </keybind>
    <keybind key="A-F4">
      <action name="Close"/>
    </keybind>
    <keybind key="A-tab">
      <action name="NextWindow"/>
    </keybind>
    <keybind key="W-tab">
      <action name="Execute" command="/opt/labwc-scripts/spawn-kitty"/>
    </keybind>
    <keybind key="W-d">
      <action name="Execute" command="/opt/labwc-scripts/show-desktop"/>
    </keybind>
    <keybind key="W-S-s">
      <action name="Execute" command="/opt/labwc-scripts/scshot"/>
    </keybind>
    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl set +10%"/>
    </keybind>
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 10%-"/>
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ -5%"/>
    </keybind>
    <keybind key="XF86_AudioNext">
      <action name="Execute" command="playerctl next"/>
    </keybind>
    <keybind key="XF86_AudioPause">
      <action name="Execute" command="playerctl  play-pause"/>
    </keybind>
    <keybind key="XF86_AudioPlay">
      <action name="Execute" command="playerctl  play-pause"/>
    </keybind>
    <keybind key="XF86_AudioPrev">
      <action name="Execute" command="playerctl previous"/>
    </keybind>
    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ +5%"/>
    </keybind>
    <keybind key="XF86_AudioMute">
      <action name="Execute" command="pactl set-sink-mute @DEFAULT_SINK@ toggle"/>
    </keybind>
    <keybind key="W-l">
      <action name="Execute" command="swaylock"/>
    </keybind>
  </keyboard>
  <theme>
    <name>GTK</name>
    <dropShadows>yes</dropShadows>
  </theme>
</labwc_configs>
